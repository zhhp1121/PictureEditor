<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="imageutil.zhp.com.imageutils.MainActivity">

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <ImageView
        android:id="@+id/image_src"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/scene"
        android:layout_below="@+id/sample_text"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/color_seekbar"
        android:max="360"
        android:progress="180"
        android:layout_below="@+id/image_src"
        android:layout_marginTop="20dp"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/saturation_seekbar"
        android:max="360"
        android:progress="180"
        android:layout_below="@+id/color_seekbar"
        android:layout_marginTop="20dp"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/light_seekbar"
        android:max="360"
        android:progress="180"
        android:layout_below="@+id/saturation_seekbar"
        android:layout_marginTop="20dp"/>
</RelativeLayout>
